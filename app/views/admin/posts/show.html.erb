<p>
  <b>Title:</b>
  <%=h @post.title %>
</p>

<p>
  <b>Body:</b>
  <%=h @post.body %>
</p>

<!-- #1 -->
<% unless @post.comments.empty? %>
  <h3>Comments</h3>
  <% @post.comments.each do |comment| %>
  <p><%= h comment.body %></p>
  <% end %>
<% end %>


<!-- #2 -->
<h3>New Comment</h3>

<%= render :partial => 'comments/comment', :locals => {:button_name => 'Create', :comment => Comment.new}%>

<%= link_to 'Comments', post_comments_path(@post) %>


<%= link_to 'Edit', edit_admin_post_path(@post) %> |
<%= link_to 'Back', admin_posts_path %>

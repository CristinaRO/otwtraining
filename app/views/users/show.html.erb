<p>
  <b>Title:</b>
  <%=h @post.title %>
</p>

<p>
  <b>Body:</b>
  <%=h @post.body %>
</p>


<!-- list the existing posts -->
<% unless @post.comments.empty? %>
  <h3>Comments</h3>
  <% @post.comments.each do |comment| %>
  <p><%=h comment.body %></p>
  <% end %>
<% end %>


<%= link_to 'Edit', edit_user_post_path(@post) %> |
<%= link_to 'Back', user_posts_path(@user) %> |
<%= link_to 'Comment', post_comments_path(@post) %>

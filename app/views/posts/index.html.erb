<h1>Awesome OTW blog posts</h1>

<table>
  <tr>
    <th>User Id</th>
    <th>Title</th>
    <th>Body</th>
  </tr>

<% for post in @posts %>
  <tr>
    <td><%=h post.user_id %></td>
    <td><%=h post.title %></td>
    <td><%=h post.body %></td>
    <td><%= link_to 'Show', post %></td>
    <td><%= link_to 'Edit', [:edit, @user, post] %></td>
    <td><%= link_to 'Destroy', [@user, post], :confirm => 'Are you sure?', :method=> :delete %></td>
      </tr>
<% end %>
</table>

<p>
<%= will_paginate @posts %>
</p>
<%= link_to 'New post', new_user_post_path(@user) %> | 
<%= link_to 'Back', homepages_path %>


